<div class="col-md-8 col-md-offset-2">
<div class = "regh">
    <h2>Register new account</h2>
	</div>
    <form class="form-horizontal-reg" role="form" id="reg-form">
        <div class="form-group mt">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputUsername" class="control-label">Username</label>
            </div>
            <div class="col-sm-9">
                <input type="text" class="form-control input-lg required" id="inputUsername" placeholder="@username">
            </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
            <div class="col-sm-3">
                <label for="inputPassword" class="control-label">Password</label>
            </div>
            <div class="col-sm-9">
                <input type="password" class="form-control input-lg required" id="inputPassword"
                       placeholder="Password">
            </div>
        </div>

        <div class="form-group">
            <div class="row col-sm-offset-2 col-sm-10 t">
                <button type="submit" class="acc-btn">Create Account</button>
            </div>
        </div>
    </form>
</div>
<script src = "/javascripts/auth.js"></script>